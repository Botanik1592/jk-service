<div class="page-header">
  <h1>Обратная связь<small> <%= current_user.first_name %></small></h1>
</div>
<div class="container">
  <%= form_tag(controller: "feedbacks", action: "message") do %>
  <%= label_tag(:kvartira, "Квартира №") %><br />
  <%= number_field_tag :kvartira, "", class: "form-control"%>
  <br /><br />
  <%= label_tag(:phone, "Телефон для связи") %><br />
  <%= telephone_field_tag :phone, "", class: "form-control"%>
  <br /><br />
  <%= label_tag(:message, "Сообщение") %><br />
  <%= text_area_tag :message, "", class: "form-control"%>
  <br /><br />
  <%= submit_tag("Отправить", class: "btn btn-primary") %>
  <% end %>
</div>





